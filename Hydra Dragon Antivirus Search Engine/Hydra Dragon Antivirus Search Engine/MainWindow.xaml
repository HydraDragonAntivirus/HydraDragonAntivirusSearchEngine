<Window x:Class="Hydra_Dragon_Antivirus_Search_Engine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Hydra Dragon Antivirus Search Engine" Height="600" Width="800">
    <Grid Background="#F4F4F4">
        <TabControl Margin="10">
            <!-- Main Window Tab -->
            <TabItem Header="Main Window">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid Background="#FFE5E5E5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Content="Max Depth" Grid.Row="0" Margin="10"/>
                        <TextBox x:Name="textBoxMaxDepth" Grid.Row="1" Margin="10"/>

                        <Label Content="Max Threads" Grid.Row="2" Margin="10"/>
                        <TextBox x:Name="textBoxMaxThreads" Grid.Row="3" Margin="10"/>

                        <Label Content="CSV Max Lines" Grid.Row="4" Margin="10"/>
                        <TextBox x:Name="textBoxCsvMaxLines" Grid.Row="5" Margin="10"/>

                        <Label Content="CSV Max Size" Grid.Row="6" Margin="10"/>
                        <TextBox x:Name="textBoxCsvMaxSize" Grid.Row="7" Margin="10"/>

                        <!-- TextBoxSearch -->
                        <Label Content="Search" Grid.Row="8" Margin="10"/>
                        <TextBox x:Name="TextBoxSearch" Grid.Row="9" Margin="10"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid Background="#FFE5E5E5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Content="Malware Input" Grid.Row="0" Margin="10"/>
                        <TextBox x:Name="textBoxMalwareInput" Grid.Row="1" Margin="10"/>

                        <Label Content="Output File" Grid.Row="2" Margin="10"/>
                        <TextBox x:Name="textBoxOutputFile" Grid.Row="3" Margin="10"/>

                        <Label Content="Whitelist Output File" Grid.Row="4" Margin="10"/>
                        <TextBox x:Name="textBoxWhitelistOutputFile" Grid.Row="5" Margin="10"/>

                        <CheckBox x:Name="checkBoxAllowAutoVerdict" Content="Allow Auto Verdict" Grid.Row="6" Margin="10"/>

                        <!-- Max Timeout -->
                        <Label Content="Max Timeout" Grid.Row="7" Margin="10"/>
                        <TextBox x:Name="textBoxMaxTimeout" Grid.Row="8" Margin="10"/>

                        <!-- Whitelist Input -->
                        <Label Content="Whitelist Input" Grid.Row="9" Margin="10"/>
                        <TextBox x:Name="textBoxWhitelistInput" Grid.Row="10" Margin="10"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Advanced Tab -->
            <TabItem Header="Advanced">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Adding missing listBoxes -->
                        <ListBox x:Name="listBoxMalware" Grid.Row="0" Height="100" Margin="10" Grid.ColumnSpan="2" />
                        <ListBox x:Name="listBoxDdos" Grid.Row="1" Height="100" Margin="10" Grid.ColumnSpan="2"/>
                        <ListBox x:Name="listBoxPhishing" Grid.Row="2" Height="100" Margin="10" Grid.ColumnSpan="2"/>
                        <ListBox x:Name="listBoxWhitelist" Grid.Row="3" Height="100" Margin="10" Grid.ColumnSpan="2"/>

                        <Label Content="Malicious Category" Grid.Row="0" Margin="10" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="textBoxCategoryMalicious" Grid.Row="1" Margin="10,10,10,10" Grid.ColumnSpan="2"/>

                        <Label Content="Phishing Category" Grid.Row="2" Margin="10" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="textBoxCategoryPhishing" Grid.Row="3" Margin="10,10,10,10" Grid.ColumnSpan="2"/>

                        <Label Content="DDoS Category" Grid.Row="4" Margin="10" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="textBoxCategoryDdos" Grid.Row="5" Margin="10,10,10,10" Grid.ColumnSpan="2"/>

                        <Label Content="Comment Template" Grid.Row="6" Margin="10" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="textBoxCommentTemplate" Grid.Row="7" Margin="10,10,10,10" Grid.ColumnSpan="2"/>

                        <!-- Alert Threshold -->
                        <Label Content="Alert Threshold" Grid.Row="8" Margin="10" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="textBoxAlertThreshold" Grid.Row="9" Margin="10,10,10,10" Grid.ColumnSpan="2"/>

                        <!-- Phishing Input -->
                        <Label Content="Phishing Input" Grid.Row="10" Margin="10" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="textBoxPhishingInput" Grid.Row="11" Margin="10,10,10,10" Grid.ColumnSpan="2"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Logs And Status Tab -->
            <TabItem Header="Logs And Status">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid Background="#FFE5E5E5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Content="Log Information" Grid.Row="0" Margin="10"/>
                        <ListBox x:Name="listBoxLog" Grid.Row="1" HorizontalAlignment="Stretch" Height="100" Margin="10"/>

                        <CheckBox x:Name="checkBoxRealTimeCsvBulk" Content="Enable Real-Time CSV Bulk" Grid.Row="2" Margin="10"/>
                        <CheckBox x:Name="checkBoxRealTimeCsvWhitelist" Content="Enable Real-Time CSV Whitelist" Grid.Row="3" Margin="10"/>
                        <CheckBox x:Name="checkBoxRealTimeSave" Content="Enable Real-Time Save" Grid.Row="4" Margin="10"/>
                        <CheckBox x:Name="checkBoxScanKnownActive" Content="Scan Known Active" Grid.Row="5" Margin="10"/>

                        <Label Content="IPv4 Logs" Grid.Row="6" Margin="10"/>
                        <ListBox x:Name="listBoxIPv4" Grid.Row="7" HorizontalAlignment="Stretch" Height="100" Margin="10"/>

                        <Label Content="IPv6 Logs" Grid.Row="8" Margin="10"/>
                        <ListBox x:Name="listBoxIPv6" Grid.Row="9" HorizontalAlignment="Stretch" Height="100" Margin="10"/>

                        <Label Content="Scan Progress" Grid.Row="10" Margin="10"/>
                        <ProgressBar x:Name="progressBarScan" Grid.Row="11" HorizontalAlignment="Stretch" Height="30" Margin="10" Value="0" Maximum="100"/>

                        <Label x:Name="labelProgress" Content="Progress: 0%" Grid.Row="12" Margin="10"/>

                        <!-- Last Scan Time -->
                        <Label Content="Last Scan Time" Grid.Row="13" Margin="10"/>
                        <TextBox x:Name="textBoxLastScanTime" Grid.Row="14" Margin="10"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Real-Time Logs Tab -->
            <TabItem Header="Real-Time Logs">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid Background="#FFE5E5E5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Content="Real-Time File" Grid.Row="0" Margin="10"/>
                        <TextBox x:Name="textBoxRealTimeFile" Grid.Row="1" Margin="10"/>

                        <Label Content="Real-Time CSV Bulk File" Grid.Row="2" Margin="10"/>
                        <TextBox x:Name="textBoxRealTimeCsvBulkFile" Grid.Row="3" Margin="10"/>

                        <Label Content="Real-Time CSV Whitelist File" Grid.Row="4" Margin="10"/>
                        <TextBox x:Name="textBoxRealTimeCsvWhitelistFile" Grid.Row="5" Margin="10"/>

                        <!-- Real-Time Logs Interval -->
                        <Label Content="Real-Time Logs Interval" Grid.Row="6" Margin="10"/>
                        <TextBox x:Name="textBoxRealTimeLogsInterval" Grid.Row="7" Margin="10"/>
                        <TextBox x:Name="textBoxDdosInput" Grid.Row="1" Margin="10,10,10,10" Grid.ColumnSpan="2" />

                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
