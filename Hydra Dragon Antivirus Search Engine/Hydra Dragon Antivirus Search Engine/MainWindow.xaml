<Window x:Class="Hydra_Dragon_Antivirus_Search_Engine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hydra Dragon Antivirus Search Engine" Height="600" Width="600">
    <Grid>
        <TabControl>

            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <!-- General Settings -->
                            <RowDefinition Height="Auto"/>
                            <!-- Header -->
                            <RowDefinition Height="Auto"/>
                            <!-- Max Depth -->
                            <RowDefinition Height="Auto"/>
                            <!-- Max Threads -->
                            <RowDefinition Height="Auto"/>
                            <!-- CSV Max Lines -->
                            <RowDefinition Height="Auto"/>
                            <!-- CSV Max Size -->
                            <RowDefinition Height="Auto"/>
                            <!-- Output File -->
                            <RowDefinition Height="Auto"/>
                            <!-- Whitelist Output File -->
                            <!-- Categories -->
                            <RowDefinition Height="Auto"/>
                            <!-- Header -->
                            <RowDefinition Height="Auto"/>
                            <!-- Malicious Category -->
                            <RowDefinition Height="Auto"/>
                            <!-- Phishing Category -->
                            <RowDefinition Height="Auto"/>
                            <!-- DDoS Category -->
                            <RowDefinition Height="Auto"/>
                            <!-- Comment Template -->
                            <!-- Buttons -->
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- General Settings Header -->
                        <TextBlock Text="General Settings" FontWeight="Bold" FontSize="14" 
                       Grid.ColumnSpan="2" Margin="0,0,0,10"/>
                        <!-- General Settings Fields -->
                        <Label Content="Max Depth:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" 
                   Margin="0,0,5,0"/>
                        <TextBox x:Name="textBoxMaxDepth" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>

                        <Label Content="Max Threads:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" 
                   Margin="0,0,5,0"/>
                        <TextBox x:Name="textBoxMaxThreads" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>

                        <Label Content="CSV Max Lines:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" 
                   Margin="0,0,5,0"/>
                        <TextBox x:Name="textBoxCsvMaxLines" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"/>

                        <Label Content="CSV Max Size (bytes):" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" 
                   Margin="0,0,5,0"/>
                        <TextBox x:Name="textBoxCsvMaxSize" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10"/>

                        <Label Content="Output File:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" 
                   Margin="0,0,5,0"/>
                        <TextBox x:Name="textBoxOutputFile" Grid.Row="5" Grid.Column="1" Margin="0,0,0,10"/>

                        <Label Content="Whitelist Output File:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" 
                   Margin="0,0,5,0"/>
                        <TextBox x:Name="textBoxWhitelistOutputFile" Grid.Row="6" Grid.Column="1" Margin="0,0,0,10"/>

                        <!-- Categories Header -->
                        <TextBlock Text="Categories" FontWeight="Bold" FontSize="14" Grid.Row="7" Grid.ColumnSpan="2" 
                       Margin="0,20,0,10"/>

                        <Label Content="Malicious Category:" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" 
                   Margin="0,0,5,0"/>
                        <TextBox x:Name="textBoxCategoryMalicious" Grid.Row="8" Grid.Column="1" Margin="0,0,0,10"/>

                        <Label Content="Phishing Category:" Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" 
                   Margin="0,0,5,0"/>
                        <TextBox x:Name="textBoxCategoryPhishing" Grid.Row="9" Grid.Column="1" Margin="0,0,0,10"/>

                        <Label Content="DDoS Category:" Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" 
                   Margin="0,0,5,0"/>
                        <TextBox x:Name="textBoxCategoryDdos" Grid.Row="10" Grid.Column="1" Margin="0,0,0,10"/>

                        <Label Content="Comment Template:" Grid.Row="11" Grid.Column="0" VerticalAlignment="Top" 
                   Margin="0,0,5,0"/>
                        <TextBox x:Name="textBoxCommentTemplate" Grid.Row="11" Grid.Column="1" Margin="0,0,0,10" 
                     Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" Grid.Row="12" Grid.ColumnSpan="2" 
                        HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button x:Name="BtnSaveSettings" Content="Save Settings" Width="110" Margin="5"/>
                            <Button x:Name="BtnLoadSettings" Content="Load Settings" Width="110" Margin="5"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Real-Time Options Tab -->
            <TabItem Header="Real-Time Options">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <!-- Bulk CSV Options -->
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <!-- Whitelist CSV Options -->
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <!-- Real-Time Log Options -->
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <!-- Additional Options -->
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Real-Time CSV Bulk Options" FontWeight="Bold" FontSize="14" 
                       Grid.ColumnSpan="2" Margin="0,0,0,10"/>
                        <CheckBox x:Name="checkBoxRealTimeCsvBulk" Content="Enable Real-Time CSV Bulk" 
                      Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <Label Content="Bulk CSV File:" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" 
                   Margin="0,0,0,10"/>
                        <TextBox x:Name="textBoxRealTimeCsvBulkFile" Grid.Row="1" Grid.Column="1" 
                     HorizontalAlignment="Right" Width="150" Margin="0,0,0,10"/>

                        <TextBlock Text="Real-Time CSV Whitelist Options" FontWeight="Bold" FontSize="14" 
                       Grid.Row="2" Grid.ColumnSpan="2" Margin="0,20,0,10"/>
                        <CheckBox x:Name="checkBoxRealTimeCsvWhitelist" Content="Enable Real-Time CSV Whitelist" 
                      Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <Label Content="Whitelist CSV File:" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" 
                   Margin="0,0,0,10"/>
                        <TextBox x:Name="textBoxRealTimeCsvWhitelistFile" Grid.Row="3" Grid.Column="1" 
                     HorizontalAlignment="Right" Width="150" Margin="0,0,0,10"/>

                        <TextBlock Text="Real-Time Log Options" FontWeight="Bold" FontSize="14" 
                       Grid.Row="4" Grid.ColumnSpan="2" Margin="0,20,0,10"/>
                        <CheckBox x:Name="checkBoxRealTimeSave" Content="Enable Real-Time Log Saving" 
                      Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <Label Content="Real-Time Log File:" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" 
                   Margin="0,0,0,10"/>
                        <TextBox x:Name="textBoxRealTimeFile" Grid.Row="5" Grid.Column="1" 
                     HorizontalAlignment="Right" Width="150" Margin="0,0,0,10"/>

                        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Vertical" Margin="0,20,0,0">
                            <CheckBox x:Name="checkBoxScanKnownActive" Content="Scan Active Known Malicious IPs (Not Recommended)" 
                        Margin="0,5"/>
                            <CheckBox x:Name="checkBoxAllowAutoVerdict" Content="Allow Auto Verdict (Recommended)" Margin="0,5"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Scanning Tab -->
            <TabItem Header="Scanning">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Button x:Name="BtnStartScan" Content="Start Scan" Width="110" Margin="5"/>
                        <Button x:Name="BtnStopScan" Content="Stop Scan" Width="110" Margin="5"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
                        <ProgressBar x:Name="progressBarScan" Width="250" Height="20" Margin="5"/>
                        <Label x:Name="labelProgress" Content="0 / 0" VerticalAlignment="Center" Margin="5"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Lists Tab -->
            <TabItem Header="Lists">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Malware Files -->
                        <GroupBox Header="Malware Files" Grid.Column="0" Grid.Row="0" Margin="5">
                            <DockPanel>
                                <ListBox x:Name="listBoxMalware" Height="80" DockPanel.Dock="Top" Margin="5"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                    <Button x:Name="BtnSelectMalware" Content="Select" Width="70" Margin="5"/>
                                    <TextBox x:Name="textBoxMalwareInput" Width="100" Margin="5"/>
                                    <Button x:Name="BtnAddMalware" Content="Add" Width="70" Margin="5"/>
                                    <Button x:Name="BtnDeleteMalware" Content="Delete" Width="70" Margin="5"/>
                                </StackPanel>
                            </DockPanel>
                        </GroupBox>

                        <!-- DDoS Files -->
                        <GroupBox Header="DDoS Files" Grid.Column="1" Grid.Row="0" Margin="5">
                            <DockPanel>
                                <ListBox x:Name="listBoxDdos" Height="80" DockPanel.Dock="Top" Margin="5"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                    <Button x:Name="BtnSelectDdosFile" Content="Select" Width="70" Margin="5"/>
                                    <TextBox x:Name="textBoxDdosInput" Width="100" Margin="5"/>
                                    <Button x:Name="BtnAddDdosFile" Content="Add" Width="70" Margin="5"/>
                                    <Button x:Name="BtnDeleteDdosFile" Content="Delete" Width="70" Margin="5"/>
                                </StackPanel>
                            </DockPanel>
                        </GroupBox>

                        <!-- Phishing Files -->
                        <GroupBox Header="Phishing Files" Grid.Column="0" Grid.Row="1" Margin="5">
                            <DockPanel>
                                <ListBox x:Name="listBoxPhishing" Height="80" DockPanel.Dock="Top" Margin="5"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                    <Button x:Name="BtnSelectPhishingFile" Content="Select" Width="70" Margin="5"/>
                                    <TextBox x:Name="textBoxPhishingInput" Width="100" Margin="5"/>
                                    <Button x:Name="BtnAddPhishingFile" Content="Add" Width="70" Margin="5"/>
                                    <Button x:Name="BtnDeletePhishingFile" Content="Delete" Width="70" Margin="5"/>
                                </StackPanel>
                            </DockPanel>
                        </GroupBox>

                        <!-- Whitelist Files -->
                        <GroupBox Header="Whitelist Files" Grid.Column="1" Grid.Row="1" Margin="5">
                            <DockPanel>
                                <ListBox x:Name="listBoxWhitelist" Height="80" DockPanel.Dock="Top" Margin="5"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                    <Button x:Name="BtnSelectWhitelist" Content="Select" Width="70" Margin="5"/>
                                    <TextBox x:Name="textBoxWhitelistInput" Width="100" Margin="5"/>
                                    <Button x:Name="BtnAddWhitelist" Content="Add" Width="70" Margin="5"/>
                                    <Button x:Name="ButtonDeleteWhitelist" Content="Delete" Width="70" Margin="5"/>
                                </StackPanel>
                            </DockPanel>
                        </GroupBox>

                        <!-- Discovered IPs -->
                        <GroupBox Header="Discovered IPs" Grid.ColumnSpan="2" Grid.Row="2" Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <GroupBox Header="IPv4" Grid.Column="0" Margin="5">
                                    <ListBox x:Name="listBoxIPv4" Height="60" Margin="5"/>
                                </GroupBox>
                                <GroupBox Header="IPv6" Grid.Column="1" Margin="5">
                                    <ListBox x:Name="listBoxIPv6" Height="60" Margin="5"/>
                                </GroupBox>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Logs Tab -->
            <TabItem Header="Logs">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="0,-3,0,13">
                            <Label Content="Search:" VerticalAlignment="Center" Margin="5"/>
                            <TextBox x:Name="TextBoxSearch" Width="100" Margin="5" TextChanged="TextBoxSearch_TextChanged"/>
                            <Button x:Name="BtnClearLog" Content="Clear Log" Width="80" Margin="5" Click="BtnClearLog_Click"/>
                            <Button x:Name="BtnSaveLog" Content="Save Log" Width="80" Margin="5" Click="BtnSaveLog_Click"/>
                        </StackPanel>
                        <ListBox x:Name="listBoxLog" Margin="5,45,5,11" Grid.RowSpan="2"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
