<Window x:Class="Hydra_Dragon_Antivirus_Search_Engine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hydra Dragon Antivirus Search Engine" Height="750" Width="1000"
        Loaded="MainWindow_Loaded">
    <Grid>
        <TabControl>
            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Border Margin="20" 
                            BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}" 
                            BorderThickness="1" 
                            CornerRadius="4">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Basic Settings Section -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,30">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Max Depth -->
                                    <Label Content="Max Depth:" 
                                           Grid.Row="0" Grid.Column="0" 
                                           VerticalAlignment="Center"/>
                                    <TextBox x:Name="textBoxMaxDepth" 
                                             Grid.Row="0" Grid.Column="1" 
                                             Margin="0,5,0,5" 
                                             MaxLength="5"/>

                                    <!-- Max Threads -->
                                    <Label Content="Max Threads:" 
                                           Grid.Row="1" Grid.Column="0" 
                                           VerticalAlignment="Center"/>
                                    <TextBox x:Name="textBoxMaxThreads" 
                                             Grid.Row="1" Grid.Column="1" 
                                             Margin="0,5,0,5" 
                                             MaxLength="3"/>

                                    <!-- CSV Max Lines -->
                                    <Label Content="CSV Max Lines:" 
                                           Grid.Row="2" Grid.Column="0" 
                                           VerticalAlignment="Center"/>
                                    <TextBox x:Name="textBoxCsvMaxLines" 
                                             Grid.Row="2" Grid.Column="1" 
                                             Margin="0,5,0,5"/>

                                    <!-- CSV Max Size -->
                                    <Label Content="CSV Max Size (bytes):" 
                                           Grid.Row="3" Grid.Column="0" 
                                           VerticalAlignment="Center"/>
                                    <TextBox x:Name="textBoxCsvMaxSize" 
                                             Grid.Row="3" Grid.Column="1" 
                                             Margin="0,5,0,5"/>

                                    <!-- Output File -->
                                    <Label Content="Output File:" 
                                           Grid.Row="4" Grid.Column="0" 
                                           VerticalAlignment="Center"/>
                                    <DockPanel Grid.Row="4" Grid.Column="1" 
                                               Margin="0,5,0,5">
                                        <Button Content="Browse" 
                                                DockPanel.Dock="Right" 
                                                Width="80" 
                                                Margin="10,0,0,0"
                                                Click="BtnBrowseOutputFile_Click"/>
                                        <TextBox x:Name="textBoxOutputFile"/>
                                    </DockPanel>

                                    <!-- WhiteList Output File -->
                                    <Label Content="WhiteList Output File:" 
                                           Grid.Row="5" Grid.Column="0" 
                                           VerticalAlignment="Center"/>
                                    <DockPanel Grid.Row="5" Grid.Column="1" 
                                               Margin="0,5,0,5">
                                        <Button Content="Browse" 
                                                DockPanel.Dock="Right" 
                                                Width="80" 
                                                Margin="10,0,0,0"
                                                Click="BtnBrowseWhiteListOutputFile_Click"/>
                                        <TextBox x:Name="textBoxWhiteListOutputFile"/>
                                    </DockPanel>
                                </Grid>
                            </StackPanel>

                            <!-- Categories Section -->
                            <TextBlock Text="Categories" 
                                       Grid.Row="2" 
                                       Grid.ColumnSpan="2"
                                       FontSize="20" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,20"/>

                            <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Malicious Category -->
                                    <Label Content="Malicious Category:" 
                                           Grid.Row="0" Grid.Column="0" 
                                           VerticalAlignment="Center"/>
                                    <TextBox x:Name="textBoxCategoryMalicious" 
                                             Grid.Row="0" Grid.Column="1" 
                                             Margin="0,5,0,5"/>

                                    <!-- Phishing Category -->
                                    <Label Content="Phishing Category:" 
                                           Grid.Row="1" Grid.Column="0" 
                                           VerticalAlignment="Center"/>
                                    <TextBox x:Name="textBoxCategoryPhishing" 
                                             Grid.Row="1" Grid.Column="1" 
                                             Margin="0,5,0,5"/>

                                    <!-- DDoS Category -->
                                    <Label Content="DDoS Category:" 
                                           Grid.Row="2" Grid.Column="0" 
                                           VerticalAlignment="Center"/>
                                    <TextBox x:Name="textBoxCategoryDDoS" 
                                             Grid.Row="2" Grid.Column="1" 
                                             Margin="0,5,0,5"/>

                                    <!-- Comment Template -->
                                    <Label Content="Comment Template:" 
                                           Grid.Row="3" Grid.Column="0" 
                                           VerticalAlignment="Top" 
                                           Margin="0,5,0,0"/>
                                    <TextBox x:Name="textBoxCommentTemplate" 
                                             Grid.Row="3" Grid.Column="1" 
                                             Height="100" 
                                             Margin="0,5,0,5"
                                             TextWrapping="Wrap" 
                                             AcceptsReturn="True" 
                                             VerticalScrollBarVisibility="Auto"/>
                                </Grid>

                                <!-- Settings Buttons -->
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Right" 
                                            Margin="0,20,0,0">
                                    <Button x:Name="BtnLoadSettings" 
                                            Content="Load Settings" 
                                            Width="120" 
                                            Height="30" 
                                            Margin="10,0"
                                            Click="BtnLoadSettings_Click"/>
                                    <Button x:Name="BtnSaveSettings" 
                                            Content="Save Settings" 
                                            Width="120" 
                                            Height="30" 
                                            Margin="10,0"
                                            Style="{DynamicResource AccentButtonStyle}"
                                            Click="BtnSaveSettings_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ScrollViewer>
            </TabItem>

            <!-- Real-Time Options Tab -->
            <TabItem Header="Real-Time Options">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Border Margin="20" 
                            BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}" 
                            BorderThickness="1" 
                            CornerRadius="4">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- CSV Bulk Options -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                                <TextBlock Text="Real-Time CSV Bulk Options" 
                                           FontSize="20" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,15"/>
                                <DockPanel Margin="20,0">
                                    <CheckBox x:Name="checkBoxRealTimeCsvBulk" 
                                              Content="Enable Real-Time CSV Bulk" 
                                              VerticalAlignment="Center"/>
                                    <DockPanel Margin="50,0,0,0">
                                        <TextBlock Text="Bulk CSV File:" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,10,0"/>
                                        <Button Content="Browse" 
                                                Width="80" 
                                                DockPanel.Dock="Right" 
                                                Margin="10,0,0,0"
                                                Click="BtnBrowseBulkCsv_Click"/>
                                        <TextBox x:Name="textBoxRealTimeCsvBulkFile"/>
                                    </DockPanel>
                                </DockPanel>
                            </StackPanel>

                            <!-- CSV WhiteList Options -->
                            <StackPanel Grid.Row="1" Margin="0,0,0,30">
                                <TextBlock Text="Real-Time CSV WhiteList Options" 
                                           FontSize="20" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,15"/>
                                <DockPanel Margin="20,0">
                                    <CheckBox x:Name="checkBoxRealTimeCsvWhiteList" 
                                              Content="Enable Real-Time CSV WhiteList" 
                                              VerticalAlignment="Center"/>
                                    <DockPanel Margin="50,0,0,0">
                                        <TextBlock Text="WhiteList CSV File:" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,10,0"/>
                                        <Button Content="Browse" 
                                                Width="80" 
                                                DockPanel.Dock="Right" 
                                                Margin="10,0,0,0"
                                                Click="BtnBrowseWhiteListCsv_Click"/>
                                        <TextBox x:Name="textBoxRealTimeCsvWhiteListFile"/>
                                    </DockPanel>
                                </DockPanel>
                            </StackPanel>

                            <!-- Real-Time Log Options -->
                            <StackPanel Grid.Row="2" Margin="0,0,0,30">
                                <TextBlock Text="Real-Time Log Options" 
                                           FontSize="20" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,15"/>
                                <DockPanel Margin="20,0">
                                    <CheckBox x:Name="checkBoxRealTimeSave" 
                                              Content="Enable Real-Time Log Saving" 
                                              VerticalAlignment="Center"/>
                                    <DockPanel Margin="50,0,0,0">
                                        <TextBlock Text="Real-Time Log File:" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,10,0"/>
                                        <Button Content="Browse" 
                                                Width="80" 
                                                DockPanel.Dock="Right" 
                                                Margin="10,0,0,0"
                                                Click="BtnBrowseRealTimeLog_Click"/>
                                        <TextBox x:Name="textBoxRealTimeFile"/>
                                    </DockPanel>
                                </DockPanel>
                            </StackPanel>

                            <!-- Additional Options -->
                            <StackPanel Grid.Row="3" Margin="20,0">
                                <TextBlock Text="Additional Options" 
                                           FontSize="20" 
                                           FontWeight="SemiBold" 
                                           Margin="0,0,0,15"/>
                                <CheckBox x:Name="checkBoxScanKnownActive" 
                                          Content="Scan Active Known Malicious IPs (Not Recommended)" 
                                          Margin="0,5,0,10"/>
                                <CheckBox x:Name="checkBoxAllowAutoVerdict" 
                                          Content="Allow Auto Verdict (Highly Recommended)" 
                                          IsChecked="True"
                                          Margin="0,5"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ScrollViewer>
            </TabItem>

            <!-- Scanning Tab -->
            <TabItem Header="Scanning">
                <Border Margin="20" 
                        BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Scan Controls -->
                        <StackPanel Grid.Row="0" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,20">
                            <TextBlock Text="Scan Controls" 
                                       FontSize="20" 
                                       FontWeight="SemiBold" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,0,0,20"/>
                            <StackPanel Orientation="Horizontal"/>
                        </StackPanel>

                        <!-- Progress Section -->
                        <TextBlock x:Name="textBlockCurrentFile" 
                                   Text="Current Loaded Definition File: None" 
                                   FontSize="14" 
                                   Foreground="Blue" 
                                   HorizontalAlignment="Left"
                                   Margin="33,36,0,40" Grid.RowSpan="2"/>
                        <StackPanel Grid.Row="1" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,20">
                            <TextBlock Text="Scan Progress" 
                                       FontWeight="Medium" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,0,0,10"/>
                            <Grid Width="500">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ProgressBar x:Name="progressBarScan" 
                                             Height="20" 
                                             Margin="0,0,10,0"/>
                                <TextBlock x:Name="textBlockProgress" 
                                           Grid.Column="1" 
                                           Text="0 / 0" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <!-- Scan Status -->
                        <Border Grid.Row="2" 
                                BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}" 
                                BorderThickness="1" 
                                CornerRadius="4" 
                                Margin="0,20,0,0">
                            <DockPanel Margin="10">
                                <TextBlock Text="Scan Status" 
                                           DockPanel.Dock="Top" 
                                           FontWeight="Medium" 
                                           Margin="0,0,0,10"/>
                                <ListView x:Name="listBoxScanStatus" 
                                          BorderThickness="0">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Time" Width="150"/>
                                            <GridViewColumn Header="Status" Width="200"/>
                                            <GridViewColumn Header="Details" Width="400"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </DockPanel>
                        </Border>
                        <Button x:Name="BtnStartScan" 
                                Content="Start Scan" 
                                Style="{DynamicResource AccentButtonStyle}" 
                                Click="BtnStartScan_Click" 
                                Margin="33,6,729,20" 
                                Grid.Row="1" 
                                MinWidth="120" 
                                MaxWidth="120" />
                    </Grid>
                </Border>
            </TabItem>

            <!-- Lists Tab -->
            <TabItem Header="Lists">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <!-- Define 4 rows for the 4 main categories and 2 columns for IPv4 and IPv6 -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Malware Files IPv4 -->
                        <Border Grid.Row="0" Grid.Column="0"
              BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}"
              BorderThickness="1" CornerRadius="4" Margin="5">
                            <StackPanel Margin="10">
                                <TextBlock Text="Malware Files (IPv4)" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                                <ListView x:Name="listBoxMalwareIPv4" Height="150"
                    BorderThickness="1" BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="File Name" Width="Auto"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBox x:Name="textBoxMalwareIPv4Input" Width="200" Margin="5,0" ToolTip="Enter file path"/>
                                    <Button x:Name="BtnBrowseMalwareIPv4" Content="Browse" Width="80" Margin="5,0" Click="BtnBrowseMalwareIPv4_Click"/>
                                    <Button x:Name="BtnAddMalwareIPv4" Content="Add" Width="80" Margin="5,0" Click="BtnAddMalwareIPv4_Click" Style="{DynamicResource AccentButtonStyle}"/>
                                    <Button x:Name="BtnDeleteMalwareIPv4" Content="Remove" Width="80" Margin="5,0" Click="BtnDeleteMalwareIPv4_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Malware Files IPv6 -->
                        <Border Grid.Row="0" Grid.Column="1"
              BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}"
              BorderThickness="1" CornerRadius="4" Margin="5">
                            <StackPanel Margin="10">
                                <TextBlock Text="Malware Files (IPv6)" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                                <ListView x:Name="listBoxMalwareIPv6" Height="150"
                    BorderThickness="1" BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="File Name" Width="Auto"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBox x:Name="textBoxMalwareIPv6Input" Width="200" Margin="5,0" ToolTip="Enter file path"/>
                                    <Button x:Name="BtnBrowseMalwareIPv6" Content="Browse" Width="80" Margin="5,0" Click="BtnBrowseMalwareIPv6_Click"/>
                                    <Button x:Name="BtnAddMalwareIPv6" Content="Add" Width="80" Margin="5,0" Click="BtnAddMalwareIPv6_Click" Style="{DynamicResource AccentButtonStyle}"/>
                                    <Button x:Name="BtnDeleteMalwareIPv6" Content="Remove" Width="80" Margin="5,0" Click="BtnDeleteMalwareIPv6_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- DDoS Files IPv4 -->
                        <Border Grid.Row="1" Grid.Column="0"
              BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}"
              BorderThickness="1" CornerRadius="4" Margin="5">
                            <StackPanel Margin="10">
                                <TextBlock Text="DDoS Files (IPv4)" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                                <ListView x:Name="listBoxDDoSIPv4" Height="150"
                    BorderThickness="1" BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="File Name" Width="Auto"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBox x:Name="textBoxDDoSIPv4Input" Width="200" Margin="5,0" ToolTip="Enter file path"/>
                                    <Button x:Name="BtnBrowseDDoSIPv4" Content="Browse" Width="80" Margin="5,0" Click="BtnBrowseDDoSIPv4_Click"/>
                                    <Button x:Name="BtnAddDDoSIPv4" Content="Add" Width="80" Margin="5,0" Click="BtnAddDDoSIPv4_Click" Style="{DynamicResource AccentButtonStyle}"/>
                                    <Button x:Name="BtnDeleteDDoSIPv4" Content="Remove" Width="80" Margin="5,0" Click="BtnDeleteDDoSIPv4_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- DDoS Files IPv6 -->
                        <Border Grid.Row="1" Grid.Column="1"
              BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}"
              BorderThickness="1" CornerRadius="4" Margin="5">
                            <StackPanel Margin="10">
                                <TextBlock Text="DDoS Files (IPv6)" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                                <ListView x:Name="listBoxDDoSIPv6" Height="150"
                    BorderThickness="1" BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="File Name" Width="Auto"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBox x:Name="textBoxDDoSIPv6Input" Width="200" Margin="5,0" ToolTip="Enter file path"/>
                                    <Button x:Name="BtnBrowseDDoSIPv6" Content="Browse" Width="80" Margin="5,0" Click="BtnBrowseDDoSIPv6_Click"/>
                                    <Button x:Name="BtnAddDDoSIPv6" Content="Add" Width="80" Margin="5,0" Click="BtnAddDDoSIPv6_Click" Style="{DynamicResource AccentButtonStyle}"/>
                                    <Button x:Name="BtnDeleteDDoSIPv6" Content="Remove" Width="80" Margin="5,0" Click="BtnDeleteDDoSIPv6_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Phishing Files IPv4 -->
                        <Border Grid.Row="2" Grid.Column="0"
              BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}"
              BorderThickness="1" CornerRadius="4" Margin="5">
                            <StackPanel Margin="10">
                                <TextBlock Text="Phishing Files (IPv4)" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                                <ListView x:Name="listBoxPhishingIPv4" Height="150"
                    BorderThickness="1" BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="File Name" Width="Auto"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBox x:Name="textBoxPhishingIPv4Input" Width="200" Margin="5,0" ToolTip="Enter file path"/>
                                    <Button x:Name="BtnBrowsePhishingIPv4" Content="Browse" Width="80" Margin="5,0" Click="BtnBrowsePhishingIPv4_Click"/>
                                    <Button x:Name="BtnAddPhishingIPv4" Content="Add" Width="80" Margin="5,0" Click="BtnAddPhishingIPv4_Click" Style="{DynamicResource AccentButtonStyle}"/>
                                    <Button x:Name="BtnDeletePhishingIPv4" Content="Remove" Width="80" Margin="5,0" Click="BtnDeletePhishingIPv4_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Phishing Files IPv6 -->
                        <Border Grid.Row="2" Grid.Column="1"
              BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}"
              BorderThickness="1" CornerRadius="4" Margin="5">
                            <StackPanel Margin="10">
                                <TextBlock Text="Phishing Files (IPv6)" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                                <ListView x:Name="listBoxPhishingIPv6" Height="150"
                    BorderThickness="1" BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="File Name" Width="Auto"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBox x:Name="textBoxPhishingIPv6Input" Width="200" Margin="5,0" ToolTip="Enter file path"/>
                                    <Button x:Name="BtnBrowsePhishingIPv6" Content="Browse" Width="80" Margin="5,0" Click="BtnBrowsePhishingIPv6_Click"/>
                                    <Button x:Name="BtnAddPhishingIPv6" Content="Add" Width="80" Margin="5,0" Click="BtnAddPhishingIPv6_Click" Style="{DynamicResource AccentButtonStyle}"/>
                                    <Button x:Name="BtnDeletePhishingIPv6" Content="Remove" Width="80" Margin="5,0" Click="BtnDeletePhishingIPv6_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- WhiteList Files IPv4 -->
                        <Border Grid.Row="3" Grid.Column="0"
              BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}"
              BorderThickness="1" CornerRadius="4" Margin="5">
                            <StackPanel Margin="10">
                                <TextBlock Text="WhiteList Files (IPv4)" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                                <ListView x:Name="listBoxWhiteListIPv4" Height="150"
                    BorderThickness="1" BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="File Name" Width="Auto"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBox x:Name="textBoxWhiteListIPv4Input" Width="200" Margin="5,0" ToolTip="Enter file path"/>
                                    <Button x:Name="BtnBrowseWhiteListIPv4" Content="Browse" Width="80" Margin="5,0" Click="BtnBrowseWhiteListIPv4_Click"/>
                                    <Button x:Name="BtnAddWhiteListIPv4" Content="Add" Width="80" Margin="5,0" Click="BtnAddWhiteListIPv4_Click" Style="{DynamicResource AccentButtonStyle}"/>
                                    <Button x:Name="BtnDeleteWhiteListIPv4" Content="Remove" Width="80" Margin="5,0" Click="BtnDeleteWhiteListIPv4_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- WhiteList Files IPv6 -->
                        <Border Grid.Row="3" Grid.Column="1"
              BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}"
              BorderThickness="1" CornerRadius="4" Margin="5">
                            <StackPanel Margin="10">
                                <TextBlock Text="WhiteList Files (IPv6)" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                                <ListView x:Name="listBoxWhiteListIPv6" Height="150"
                    BorderThickness="1" BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="File Name" Width="Auto"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBox x:Name="textBoxWhiteListIPv6Input" Width="200" Margin="5,0" ToolTip="Enter file path"/>
                                    <Button x:Name="BtnBrowseWhiteListIPv6" Content="Browse" Width="80" Margin="5,0" Click="BtnBrowseWhiteListIPv6_Click"/>
                                    <Button x:Name="BtnAddWhiteListIPv6" Content="Add" Width="80" Margin="5,0" Click="BtnAddWhiteListIPv6_Click" Style="{DynamicResource AccentButtonStyle}"/>
                                    <Button x:Name="BtnDeleteWhiteListIPv6" Content="Remove" Width="80" Margin="5,0" Click="BtnDeleteWhiteListIPv6_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                    </Grid>
                </ScrollViewer>
            </TabItem>
            <!-- Logs Tab -->
            <TabItem Header="Logs">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Log Controls -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,0,10,0">
                        <TextBlock Text="Search:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,10,0"/>
                        <TextBox x:Name="TextBoxLogSearch" 
                                 Width="200" 
                                 Margin="0,0,10,0"/>
                        <Button x:Name="BtnClearLog" 
                                Content="Clear Log" 
                                Width="100" 
                                Margin="0,0,10,0"
                                Click="BtnClearLog_Click"/>
                        <Button x:Name="BtnSaveLog" 
                                Content="Save Log" 
                                Width="100"
                                Click="BtnSaveLog_Click"/>
                    </StackPanel>

                    <!-- Log Content -->
                    <Border Grid.Row="1" 
                            BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}" 
                            BorderThickness="1" 
                            CornerRadius="4">
                        <ListView x:Name="listBoxLog" 
                                  BorderThickness="0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Message" Width="Auto"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
